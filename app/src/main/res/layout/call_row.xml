<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_margin="10dp"
    android:weightSum="10">

    <ImageView
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        app:srcCompat="@drawable/ic_person_black_24dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="8"
        android:layout_marginLeft="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/contact_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="name"
            android:textSize="16sp"
            style="?attr/contactNameStyle"/>

        <ImageView
            android:id="@+id/call_type_image"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginRight="6dp"
            android:layout_alignLeft="@id/contact_name"
            android:layout_alignBottom="@id/contact_image"
            />
        <TextView
            style="?attr/additionalTextStyle"
            android:id="@+id/phone_number"
            android:layout_toRightOf="@id/call_type_image"
            android:layout_alignBottom="@id/call_type_image"
            android:textSize="12sp"
            />

        <TextView
            android:id="@+id/call_duration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="name"
            android:textSize="12sp"
            style="?attr/contactNameStyle"/>

        <TextView
            android:id="@+id/call_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="date"
            android:textSize="12sp"
            style="?attr/contactNameStyle"/>

    </LinearLayout>

    <Button
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:background="@drawable/ic_phone_black_24dp"/>

</LinearLayout>